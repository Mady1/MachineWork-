#include <iostream>
#include <conio.h>
using namespace std;

class test
{
    int a,b,c;
    int avg(void);
public:
    void init(int x,int y,int z)
    {
        a=x;
        b=y;
        c=2;
    }
void disp(void)
    {
        int R;
        R=avg();
        cout<<"average: "<<R;
    }
};
int test ::avg(void)
{
    int d;
    d=(a+b+c)/3;
    return (d);
}
int main()
{
    test obj;
    obj.init(10,20,30);
    obj.disp();
}
